{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v0.6.13/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "options": {
      "set-session-context": false
    },
    "connection-string": "Server=(localdb)\\MSSQLLocalDB;Database=SampleDb;User ID=DabLogin;Password=P@ssw0rd!;TrustServerCertificate=True;"
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/api"
    },
    "graphql": {
      "allow-introspection": true,
      "enabled": true,
      "path": "/graphql"
    },
    "host": {
      "mode": "development",
      "cors": {
        "origins": [],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      }
    }
  },
  "entities": {
    "Customers": {
      "source": {
        "type": "table",
        "object": "[dbo].[Customers]",
        "key-fields": [
          "[Id]"
        ]
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            "create",
            "read",
            "update",
            "delete"
          ]
        }
      ],
      "mappings": {
        "Id": "id",
        "Name": "name",
        "City": "city",
        "State": "state",
        "Location": "location",
        "SpecialRank": "specialrank",
        "weirdName": "weirdname",
        "Very Weird Name": "veryweirdname"
      },
      "rest": {
        "path": "/customers"
      },
      "graphql": false
    }
  }
}